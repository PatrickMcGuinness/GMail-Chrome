
<link rel="stylesheet" href="hint.min.css"></link>
<div class='lde-ajax-spinner'></div>
<div class='lde-popup-close-button'></div>
<div class='lde-popup-content'>
	<div class='lde-popup-msg-header'>
		<div class='lde-popup-subject'>{{>subject}}</div>
		<div class='lde-popup-sender-email'>From: </div>
		<div class='lde-popup-sender-name'>{{>from.name}}</div>
		<div class='lde-popup-sender-email'>{{>from.email}}</div>
		<div class='lde-popup-date'>{{>date}}</div></br>
		<div class='lde-popup-recieved-email'>To: </div>
		<div class='lde-popup-recieved-name'>{{>first_recipient.name}}</div>
		<div class='lde-popup-recieved-email'>{{>first_recipient.email}}</div>
		<div class='lde-popup-recieved-hint hint hint--bottom' data-hint='{{:restof_recipients}}'>...See more</div>
	</div>
	
</div>
	<div class='lde-popup-msg-text'>{{:body}}</div>
	<div class='lde-popup-msg-close'></div>
	<div class='lde-popup-msg-showoriginal'>{{:msg_url}}</div>

